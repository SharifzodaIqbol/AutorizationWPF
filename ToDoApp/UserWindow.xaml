<Window x:Class="ToDoApp.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="UserWindow" Height="300" Width="400"
        Background="#FF3E71DC">

    <Grid>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" Cursor="">

            <TextBlock Text="Авторизация" 
                       Foreground="White" 
                       FontWeight="Bold" 
                       FontSize="20"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>


            <TextBox materialDesign:HintAssist.Hint="Введите логин"
                     Foreground="White"
                     BorderBrush="White"
                     Margin="0,0,0,20"
                     Style="{StaticResource MaterialDesignTextBox}" CaretBrush="White" SelectionBrush="White" Width="160"/>

            <PasswordBox materialDesign:HintAssist.Hint="Введите пароль"
                         Foreground="White"
                         BorderBrush="White"
                         Style="{StaticResource MaterialDesignRevealPasswordBox}" Width="160" SelectionBrush="White" Background="{Binding Mode=OneWay, Source={StaticResource CheckMarkIcon}}"/>


            <Button Content="Вход" 
                    Margin="0,30,0,10"
                    Width="160"
                    Background="#FF296F5A"
                    Cursor="Hand"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="EnterApp"/>

            <Button Content="Регистрация"
                    Foreground="White"
                    Cursor="Hand"
                    Style="{StaticResource MaterialDesignFlatButton}"/>
        </StackPanel>
    </Grid>
</Window>
